<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:behavior_overlapTop="@dimen/appBarOverlay"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kausthubhadhikari.transferwisetest.home.views.activity.HomeActivity"
    tools:showIn="@layout/home_activity">

    <com.kausthubhadhikari.transferwisetest.utils.custom.CustomRecyclerView
        android:id="@+id/shotList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="@dimen/home_padding"
        android:layout_marginRight="@dimen/home_padding"
        android:layout_marginTop="0dp"
        android:layoutAnimation="@anim/grid_layout_bottom_up_animation"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
